IMAGEN SUPERIOR -->
    <div class="image">
        <img class="escudo" src="./img/escudo.png" alt="Escudo de Girardot" title="Girardot - Cundinamarca" />
        <p class="letter">OTIC Girardot</p>
    </div>

    <div class="logoMobile">
        <img src="./img/escudoLetrado.png" alt="Escudo de Girardot" />
    </div>
<!-- FIN IMAGEN SUPERIOR -->
    <section class="accesos">
      <div class="tittle">
        <h2 style="font-weight: 600;">APPS OTIC</h2>
        <img src="./img/server.svg" alt="" style="margin-top: -30px;" />
      </div>
 <!-- SE LLAMAN LOS ENLACES ALMACENADOS POR MEDIO DE UN CICLO, QUE RECORRA LA BASE DE DATOS, LLAMANDO CADA UNA DE SUS
 PROPIEDADES COMO LO ES IMAGEN, URL, TITULO, DESCRIPCION, LISTANDO ASÍ EN TARJETAS TODOS LOS ENLACES QUE ALLÍ SE 
 ENCUENTREN ALMACENADOS -->
        <div class="container p-4">
            <div class="row">
                {{#each links}}
                <div class="col-md-4">
                    <div class="card border-0 text-center">
                        <div class="card-body animate__animated animate__fadeInDown">
                            <img src="{{path}}" class="card-img-top">
                            <a href="{{url}}" target="_blank">
                                <h3 class="card-title text-uppercase">
                                    {{title}}
                                </h3>
                            </a>
                            <p class="m-3">{{description}}</p>
                            <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                            <!-- Se le indica la ruta junto al id del enlace, utilizado para poder eliminar -->
                            <a href="/links/edit/{{id}}" class="btn btn-secondary"> Editar </a>
                            <!-- Se le indica la ruta junto al id del enlace, utilizado para poder editar -->
                        </div>
                    </div>
                    </br>
                </div>
                {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay aplicativos almacenados aún.</p>
                        <a href="/links/add" target="blank_">Crea uno</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <div class="background"></div>
